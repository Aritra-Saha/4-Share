<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.myoralvillage.cashcalculatormodule.views.CurrencyScrollbarView
        android:id="@+id/currency_scrollbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/number_pad"
        android:layout_width="match_parent"
        android:background="@drawable/scrollbar_background"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="0dip"
            android:layout_height="match_parent">

            <Button
                android:text="@string/_0"
                android:id="@+id/zero"
                android:layout_column="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:text="@string/_1"
                android:id="@+id/one"
                android:layout_column="3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <ImageButton
                android:contentDescription="@string/back"
                android:src="@drawable/back"
                android:scaleType="fitXY"
                android:id="@+id/back"
                android:layout_column="5"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:text="@string/_5"
                android:id="@+id/five"
                android:layout_column="7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:text="@string/_6"
                android:id="@+id/six"
                android:layout_column="9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:text="@string/_7"
                android:id="@+id/seven"
                android:layout_column="11"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="match_parent">

            <Button
                android:text="@string/_2"
                android:id="@+id/two"
                android:layout_column="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:text="@string/_3"
                android:id="@+id/three"
                android:layout_column="2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:text="@string/_4"
                android:id="@+id/four"
                android:layout_column="4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <ImageButton
                android:contentDescription="@string/check"
                android:src="@drawable/checkmark"
                android:id="@+id/check"
                android:layout_column="6"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:text="@string/_8"
                android:id="@+id/eight"
                android:layout_column="8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:text="@string/_9"
                android:id="@+id/nine"
                android:layout_column="10"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />
        </TableRow>

    </TableLayout>

    <org.myoralvillage.cashcalculatormodule.views.CountingTableView
        android:id="@+id/counting_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/wooden_surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sum_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="20dp"
        android:text="@string/total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/calculate_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#000F0F0F"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <ImageView
        android:id="@+id/clear_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/handshake"
        app:layout_constraintBottom_toBottomOf="@id/counting_table"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/right_history_button"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:src="@drawable/bridge_right"
        app:layout_constraintBottom_toBottomOf="@id/counting_table"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/left_history_button"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:src="@drawable/bridge_left"
        app:layout_constraintBottom_toBottomOf="@id/counting_table"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/enter_history_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/highway"
        app:layout_constraintBottom_toBottomOf="@id/counting_table"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
